@model IEnumerable<RestaurantRater.Models.RatingModels.RatingItem>
@{
    ViewData["Title"] = "Ratings";
}

<h1>Ratings</h1>
<p>
    @Html.ActionLink("Rate a Restaurant", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RestaurantName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Score)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <strong>@Html.DisplayFor(modelItem => item.RestaurantName)</strong>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
            </td>
            <td>
                <a asp-action="RatingsByRestaurant" asp-route-id="@item.Id" class="mx-2 btn btn-outline-primary">Get Ratings By
                    Restaurant</a>
            </td>
        </tr>
    }
</table>